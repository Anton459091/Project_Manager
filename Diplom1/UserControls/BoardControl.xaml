<UserControl x:Class="Project_Manager.UserControls.BoardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project_Manager.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#f9f6f2">
       
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">

            <StackPanel Name="BoardStackPanel" Orientation="Horizontal">

                <StackPanel x:Name="СatalogStackPanel" Orientation="Horizontal" Margin="10" Width="auto" Height="auto" VerticalAlignment="Top"/>
                
                <Border BorderBrush="Black" BorderThickness="1"  CornerRadius="15" Margin="15" Background="White" Width="auto" Height="auto" VerticalAlignment="Top">
                    <Button x:Name="AddСatalogButton" Content=" + Добавить Список" Margin="15" FontSize="15" HorizontalAlignment="Left" Foreground="#646f77" Click="AddСatalogButton_Click"/>
                </Border>
                
            </StackPanel>
        </ScrollViewer>

    </Grid>
</UserControl>
