<Window x:Class="Project_Manager.UserControls.Authorization.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Manager.UserControls.Authorization"
        mc:Ignorable="d"
        Title="EditWindow"  MinHeight="750" MinWidth="450" Height="750" Width="450">
    <Grid Margin="10">
        <StackPanel>

            <Image x:Name="ProfileImage" Width="100" Height="100" Source="/Resources/default_avatar.png" Stretch="UniformToFill"/>

            <Button Content="Загрузить фото" 
                    Width="150"
                    HorizontalAlignment="Center"
                    Click="UploadPhoto_Click"
                    Style="{StaticResource BtnMain}"
                    Foreground="#476f95"/>

            <TextBox Text="Логин:" Margin="0,5" HorizontalAlignment="Center" Foreground="#476f95" FontWeight="Bold" FontSize="20"/>
            
            <TextBox x:Name="UsernameTextBox" Text="{Binding Login}" Margin="10" BorderThickness="2" Padding="5" FontSize="18" />

            <TextBox Text="Новый пароль:" Margin="0,10,0,5" HorizontalAlignment="Center" Foreground="#476f95" FontWeight="Bold" FontSize="20"/>
            <PasswordBox x:Name="NewPasswordBox"                               
                            Height="50" 
                            Padding="5"
                            Margin="5"
                            FontSize="18"
                            VerticalContentAlignment="Center"
                            BorderThickness="2"
                            Tag="Пароль"/>

            <TextBox Text="Подтвердите пароль:" Foreground="#476f95" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center"/>

            <PasswordBox x:Name="ConfirmPasswordBox" 
                            Height="50" 
                            Padding="5"
                            Margin="10"
                            FontSize="18"
                            BorderThickness="2"
                            VerticalContentAlignment="Center"
                            Tag="Пароль"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20">
            <Button Content="Сохранить" 
                        Click="Save_Click"                 
                        FontSize="18" 
                        Width="170" 
                        Height="35" 
                        Margin="0,10,0,10"
                        Foreground="#476f95" 
                        Style="{StaticResource BtnMain}"/>

            <Button Content="Отмена" Click="Cancel_Click"                         
                        FontSize="18" 
                        Width="170" 
                        Height="35" 
                        Margin="0,10,0,10"
                        Foreground="#476f95" 
                        Style="{StaticResource BtnMain}"/>
        </StackPanel>

    </Grid>
</Window>
