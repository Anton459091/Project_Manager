<Window x:Class="Project_Manager.UserControls.Authorization.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" MinHeight="750" MinWidth="450" Height="750" Width="450"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Заголовок -->
            <TextBlock Text="Регистрация" 
                    FontSize="32"  
                    FontWeight="Bold" 
                    Margin="0,20,0,20"
                    HorizontalAlignment="Center"
                    Foreground="#476f95"
                       />

            <!-- Аватар -->
            <Border BorderBrush="#646f77" 
                    BorderThickness="1" 
                    CornerRadius="75"
                    Width="150" 
                    Height="150"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20">
                <Image x:Name="ProfileImage" 
                       Source="/Resources/default_avatar.png"
                       Stretch="UniformToFill"/>
            </Border>

            <Button Content="Загрузить фото" 
                    Width="150"
                    HorizontalAlignment="Center"
                    Click="UploadPhotoButton_Click"
                    Style="{StaticResource BtnMain}"
                    Foreground="#476f95"
                    />

            <!-- Логин -->
            <TextBlock Text="Логин:" Margin="5,0" 
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#476f95"
                       />
            <TextBox x:Name="UsernameTxtBx" 
                     Margin="5"
                     Padding="5"
                     FontSize="18"
                     BorderThickness="2"/>

            <!-- Пароль -->
            <TextBlock Text="Пароль:" Margin="5,10,5,0" 
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#476f95"
                       />
            <PasswordBox x:Name="PasswordBox" 
                         Margin="5"
                         Padding="5"
                         FontSize="18"
                         BorderThickness="2"/>

            <!-- Подтверждение пароля -->
            <TextBlock Text="Подтвердите пароль:" 
                       Margin="5,10,5,0"                   
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#476f95"/>
            <PasswordBox x:Name="ConfirmPasswordBox" 
                         Margin="5"
                         Padding="5"
                         FontSize="18"
                         BorderThickness="2"/>

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">
                <Button Content="Зарегистрироваться" 
                        Width="160"
                        Margin="10"
                        Click="RegisterButton_Click"
                        Foreground="#476f95"
                        Style="{StaticResource BtnMain }"/>

                <Button Content="Отмена" 
                        Width="160"
                        Margin="10"
                        Click="CancelButton_Click"
                        Foreground="#476f95"
                        Style="{StaticResource BtnMain }"/>
            </StackPanel>

            <!-- Сообщение об ошибке -->
            <TextBlock x:Name="ErrorMessage"
                       Foreground="#79021c"
                       Margin="0,10,0,0"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>