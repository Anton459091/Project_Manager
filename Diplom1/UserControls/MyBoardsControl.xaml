<UserControl x:Class="Project_Manager.UserControls.MyBoardsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project_Manager.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >

        <ScrollViewer HorizontalScrollBarVisibility="Auto">
            <StackPanel >

                <Label Content="Мои доски" Foreground="#030303" HorizontalAlignment="Center" VerticalAlignment="Top" />

                <Border BorderBrush="#646f77" BorderThickness="1"  CornerRadius="15" Margin="5"  Width="auto" Height="auto" VerticalAlignment="Top" Grid.Row="1" Background="#d9d6d2">
                    <StackPanel Height="auto" Width="auto">

                        <StackPanel x:Name="MyBoards" Height="auto" Width="auto" Margin="10" VerticalAlignment="Top" >

                            <!-- Тут все созданные доски -->

                        </StackPanel>
                        <Border BorderBrush="#151514" BorderThickness="0.5"  CornerRadius="15" Margin="15" Background="#f9f6f2" Width="auto" Height="auto" HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <Button Content=" + Добавить Доску" Margin="15" FontSize="15" HorizontalAlignment="Left" Style="{StaticResource BtnMain}" Click="AddBoardButton_Click"/>
                                <!-- тут возможны доп функции тапа категорий-->
                            </StackPanel>
                        </Border>
                    </StackPanel>

                </Border>

            </StackPanel>

        </ScrollViewer>


    </Grid>
</UserControl>
