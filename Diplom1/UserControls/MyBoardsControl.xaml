<UserControl x:Class="Project_Manager.UserControls.MyBoardsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project_Manager.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#f9f6f2">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="Black" BorderThickness="1"  CornerRadius="15" Margin="15" Background="White" Width="auto" Height="auto" HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal">
                <Button Content=" + Добавить Доску" Margin="15" FontSize="15" HorizontalAlignment="Left" Foreground="#646f77"/>
                <!-- тут возможны доп функции тапа категорий-->
            </StackPanel>
        </Border>

        <Border BorderBrush="#646f77" BorderThickness="2"  CornerRadius="15" Margin="15"  Width="auto" Height="auto" VerticalAlignment="Top" Grid.Row="1">
            <StackPanel>
                <Label Content="Мои доски" Foreground="#646f77" HorizontalAlignment="Center"/>

                <StackPanel x:Name="MyBoards" Height="auto">

                    <!-- Тут все созданные доски -->

                </StackPanel>

            </StackPanel>

        </Border>

    </Grid>
</UserControl>
