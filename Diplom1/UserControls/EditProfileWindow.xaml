<Window x:Class="Project_Manager.UserControls.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование" MinHeight="700" MinWidth="350" Height="700" Width="350" MaxHeight="800" MaxWidth="500"
        WindowStartupLocation="CenterOwner" Icon="\Resources\icon.ico">
    <Grid Margin="10" Height="auto" Width="auto">
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="auto" Width="auto">
            
            <Border BorderBrush="#646f77" BorderThickness="1" CornerRadius="15" Width="175" Height="175" Margin="5">
                <Image x:Name="ProfileImage" Source="{Binding PhotoPath}" Stretch="UniformToFill" Height="auto" Width="auto"/>
            </Border>
            
            <Button Content="Загрузить фото" Width="auto" Margin="5" Click="UploadPhotoButton_Click" Style="{StaticResource BtnMain}" Foreground="#476f95" />

            <Label Content="Логин:"  Foreground="#030303" HorizontalAlignment="Center" />
            
            <Border BorderBrush="#646f77" BorderThickness="1"  CornerRadius="15" Width="300" Height="auto" Margin="5" HorizontalAlignment="Center">
                <TextBox x:Name="LoginTextBox" Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" Foreground="#141e26"/>
            </Border>
            
            <Label Content="Описание:" Margin="0 10 0 0" Foreground="#030303" HorizontalAlignment="Center"/>
            
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Border BorderBrush="#646f77" BorderThickness="1"  CornerRadius="15" Width="300" MaxHeight="120" Margin="5" HorizontalAlignment="Center">
                    <TextBox x:Name="DescriptionTextBox" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True"  TextWrapping="Wrap" HorizontalAlignment="Center" Foreground="#141e26"/>
                </Border>
            </ScrollViewer>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 20 0 0">
                
                <Border BorderBrush="#646f77" BorderThickness="1"  CornerRadius="15" Width="auto" Height="auto" Margin="5" HorizontalAlignment="Center">
                    <Button Content="Сохранить" Width="100" Margin="5" Click="SaveButton_Click" Style="{StaticResource BtnMain}" Foreground="#476f95"/>
                </Border>
                
                <Border BorderBrush="#646f77" BorderThickness="1"  CornerRadius="15" Width="auto" Height="auto" Margin="5" HorizontalAlignment="Center">
                    <Button Content="Отмена" Width="100" Margin="5" Click="CancelButton_Click" Style="{StaticResource BtnMain}" Foreground="#79021c"/>
                </Border>
                
            </StackPanel>
            
        </StackPanel>
        
    </Grid>
</Window>