<UserControl x:Class="Diplom1.UserControls.ListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Diplom1.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid MaxWidth="250">

        <ScrollViewer VerticalScrollBarVisibility="Auto" >

            <Border BorderBrush="Black" BorderThickness="1"  CornerRadius="10" Margin="5" Background="White" AllowDrop="True"
                Drop="ListBorder_Drop">
                
                <StackPanel Name="AddCardsStackPanel">

                    <TextBox  Name="ListNameTextBox" Text="Название списка" FontSize="20" Margin="5 10 15 5" TextWrapping="Wrap" />

                    <Button x:Name="AddCardButton" Content=" + Добавить карточку" Margin="0" FontSize="15" HorizontalAlignment="Left" Foreground="#646f77" Click="AddCardButton_Click"/>

                    <StackPanel x:Name="CardsStackPanel" Orientation="Vertical" Margin="10" Width="auto" Height="auto" VerticalAlignment="Top" MaxWidth="230"/>
                    
                </StackPanel>

        </Border>
            
        </ScrollViewer>

        <Button Name="MenuButton" Content="⋮" VerticalAlignment="Top" HorizontalAlignment="Right" Foreground="#646f77"  FontSize="20"/>

    </Grid>
</UserControl>
