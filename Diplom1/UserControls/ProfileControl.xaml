<UserControl x:Class="Project_Manager.UserControls.ProfileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project_Manager.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
                <Border BorderBrush="#646f77" BorderThickness="1"  CornerRadius="15" Width="auto" Height="auto" Margin="5">
                    <Image Height="200" Width="200" />
                </Border>

            <Label x:Name="Login" Content="Логин: ..." Foreground="#030303" Margin="5" HorizontalAlignment="Center"/>
            <Label x:Name="Description" Content="Описание: ..." Foreground="#030303" Margin="5" HorizontalAlignment="Center"/>

            <Border BorderBrush="#646f77" BorderThickness="1"  CornerRadius="15" Width="auto" Height="auto" Margin="5" HorizontalAlignment="Center">
                <Button Content="Редактировать профиль" Foreground="#476f95" FontSize="15" Margin="5" Style="{StaticResource BtnMain}"/>
            </Border>
        </StackPanel>
     
        <StackPanel Grid.Column="1" Grid.Row="0">

            <Border BorderBrush="#646f77" BorderThickness="1"  CornerRadius="15" Margin="5 10"  Width="auto" Height="auto" VerticalAlignment="Top" Background="#d9d6d2" >
                <StackPanel x:Name="MyBoards" Height="auto">
                    
                    <Label Content="Мои Доски" Foreground="#030303" HorizontalAlignment="Center"/>
                    
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="BoardsItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border 
                                    Background="#f9f6f2" BorderBrush="#646f77" BorderThickness="1"
                                    CornerRadius="10" Margin="5" Padding="10" Cursor="Hand">
                                        <TextBlock 
                                    Text="{Binding Name}" FontSize="16" Foreground="#030303" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown">
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>

        </StackPanel>
        
    </Grid>
</UserControl>
