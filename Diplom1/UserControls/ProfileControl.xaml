<UserControl x:Class="Project_Manager.UserControls.ProfileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project_Manager.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <Border BorderBrush="#646f77" BorderThickness="2"  CornerRadius="15" Width="auto" Height="auto" Margin="5">
                    <Image Height="150" Width="150" />
                </Border>

            <Button Content="Загрузить фото" Foreground="#476f95" FontSize="15" Margin="10" Style="{StaticResource BtnMain}"/>
                
            </StackPanel>
     
        <StackPanel Grid.Column="1" Grid.Row="0">

            <Label x:Name="Login" Content="Логин" Foreground="#030303"/>
            <Label x:Name="Description" Content="Описание" Foreground="#030303"/>

            <Border BorderBrush="#646f77" BorderThickness="2"  CornerRadius="15" Margin="5 0"  Width="auto" Height="auto" VerticalAlignment="Top" Background="#d9d6d2">
                <StackPanel>
                    <Label Content="Мои доски" Foreground="#030303" HorizontalAlignment="Center"/>
                    
                    <StackPanel x:Name="MyBoards" Height="auto">

                        <!-- Тут все созданные доски -->

                    </StackPanel>

                </StackPanel>
                
            </Border>

        </StackPanel>
        
    </Grid>
</UserControl>
