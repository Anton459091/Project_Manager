<Window x:Class="Project_Manager.UserControls.WindowRegistration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Manager.UserControls"
        mc:Ignorable="d"
        Title="Окно регистрации" MinHeight="480" MinWidth="320" Height="450" Width="350"
        WindowStartupLocation="CenterOwner" Icon="\Resources\icon.ico">
    <Grid Margin="10" Height="auto" Width="auto">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="auto" Width="auto">

            <Label Content="Логин:"  Foreground="#030303" HorizontalAlignment="Center" />

            <Border BorderBrush="#646f77" BorderThickness="1"  CornerRadius="15" Width="300" Height="auto" Margin="5" HorizontalAlignment="Center">
                <TextBox x:Name="LoginTextBox" Text="" HorizontalAlignment="Center" Foreground="#646f77"/>
            </Border>

            <Label Content="Пароль:" Margin="0 10 0 0" Foreground="#030303" HorizontalAlignment="Center"/>
            <Border BorderBrush="#646f77" BorderThickness="1"  CornerRadius="15" Width="300" Height="auto" Margin="5" HorizontalAlignment="Center">
                <TextBox x:Name="PasswordTextBox" Text="" HorizontalAlignment="Center" Foreground="#646f77"/>
            </Border>

            <Button VerticalAlignment="Center" HorizontalAlignment="Right" Content="Зарегистриваться" Foreground="#476f95" Style="{StaticResource BtnMain}" FontSize="12"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 20 0 0">

                <Border BorderBrush="#646f77" BorderThickness="1"  CornerRadius="15" Width="auto" Height="auto" Margin="10 5" HorizontalAlignment="Center">
                    <Button Content="Сохранить" Width="100" Margin="5" Style="{StaticResource BtnMain}" Foreground="#476f95"/>
                </Border>

                <Border BorderBrush="#646f77" BorderThickness="1" CornerRadius="15" Width="auto" Height="auto" Margin="10 5" HorizontalAlignment="Center">
                    <Button Content="Отмена" Width="100" Margin="5" Style="{StaticResource BtnMain}" Foreground="#79021c"/>
                </Border>

            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
