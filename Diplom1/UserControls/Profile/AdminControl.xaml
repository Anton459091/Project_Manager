<UserControl x:Class="Project_Manager.UserControls.Profile.AdminControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project_Manager.UserControls.Profile"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="UsersDataGrid" AutoGenerateColumns="False" CanUserAddRows="False"
                  SelectionMode="Single" SelectionUnit="FullRow"
                  CellEditEnding="UsersDataGrid_CellEditEnding" FontSize="18" Background="#fafbfc">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Логин" Binding="{Binding Login}" IsReadOnly="True" Width="*"/>
                <DataGridComboBoxColumn Header="Роль" Width="*"
                                        SelectedValueBinding="{Binding RoleId}"
                                        SelectedValuePath="Role_ID"
                                        DisplayMemberPath="RoleName"
                                        x:Name="RoleComboColumn"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
