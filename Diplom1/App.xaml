<Application x:Class="Diplom1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Diplom1"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <Style TargetType="Button" x:Key="BtnMenu">

            <Setter Property="Foreground" Value="#e2e2e4"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="Lucida Sans Unicode"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>

        </Style>

        <Style TargetType="Button" BasedOn="{StaticResource BtnMenu}"/>

        <Style TargetType="Label">

            <Setter Property="Foreground" Value="#e2e2e4"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="Lucida Sans Unicode"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>

        </Style>

        <Style TargetType="TextBox">

            <Setter Property="Foreground" Value="#646f77"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="Lucida Sans Unicode"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>

        </Style>



    </Application.Resources>
</Application>
