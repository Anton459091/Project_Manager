<Application x:Class="Project_Manager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Project_Manager"
>
    <Application.Resources>

        <Style TargetType="Button" x:Key="BtnMenu">

            <Setter Property="Foreground" Value="#fefdfc"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="Lucida Sans Unicode"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>

        </Style>

        <Style TargetType="Button" x:Key="BtnMain">

            <Setter Property="Foreground" Value="#030303"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="Lucida Sans Unicode"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="Label">

            <Setter Property="Foreground" Value="#e2e2e4"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="Lucida Sans Unicode"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>

        </Style>

        <Style TargetType="TextBox">

            <Setter Property="Foreground" Value="#030303"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="Lucida Sans Unicode"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>

        </Style>

        <Style TargetType="ContextMenu">

            <Setter Property="Background" Value="#d9d6d2"/>

        </Style>

        <Style TargetType="MenuItem">

            <Setter Property="Background" Value="#d9d6d2"/>
            <Setter Property="FontFamily" Value="Lucida Sans Unicode"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>



    </Application.Resources>
</Application>
