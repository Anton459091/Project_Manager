<Window x:Class="Project_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Manager"
        xmlns:usercontrols="clr-namespace:Project_Manager.UserControls"
        mc:Ignorable="d"
        Title="Project Manager" MinHeight="720" MinWidth="1280"
        WindowState="Maximized">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="#2e2c2b">
            <!-- Меню -->
            <Border x:Name="SidePanel" Width="auto" HorizontalAlignment="Left">
                <Grid>
                    <StackPanel Margin="10 0">

                        <Button Height="40" Width="auto" Content="Профиль"  Style="{StaticResource BtnMenu}" />
                        <Button Height="40" Width="auto" Content="Мои доски"  Style="{StaticResource BtnMenu}"/>
                        <Button Height="40" Width="auto" Content="Доска"  Style="{StaticResource BtnMenu}"/>
                    </StackPanel>
                    <Button Height="40" Width="auto" Content="Выход" VerticalAlignment="Bottom" Click="ExitBtn_Click" Style="{StaticResource BtnMenu}"/>

                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Column="1" Background="#2e2c2b">
            <Button x:Name="ToggleButton" Click="ToggleButton_Click" HorizontalAlignment="Left" Margin="0" Width="10" Style="{StaticResource BtnMenu}" />
        </Grid>


        <Grid Grid.Column="2" Background="#e1dbd6">

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#5c595c">
                <!-- Верхняя панель -->
                <StackPanel Orientation="Horizontal" >
                    <Label Name="TitleLab" Content="Название проекта" Width="auto" Margin="10 10 40 10"/>

                    <Border Background="#2e2c2b" CornerRadius="25" Padding="5" Height="50" >
                        <StackPanel Orientation="Horizontal" Height="auto" >
                            <TextBlock Text="🔍" Foreground="#e2e2e4" VerticalAlignment="Center"  Margin="5" FontSize="15" />
                            <TextBox Text="Поиск..." Background="Transparent" BorderThickness="0" Foreground="#e2e2e4" VerticalAlignment="Center" Width="200" FontSize="15" Padding="0" />
                        </StackPanel>
                    </Border>

                </StackPanel>

            </Grid>

            <Grid Grid.Row="1" Background="#f9f6f2">
                <!-- Доска -->
                <ContentControl x:Name="MainContent" />
            </Grid>

        </Grid>


    </Grid>
</Window>
